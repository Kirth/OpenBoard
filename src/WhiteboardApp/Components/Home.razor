                        {
                            <article class="card">
                                <div class="thumb skeleton"></div>
                                <div class="meta">
                                    <div class="skeleton" style="height:18px; width:160px; border-radius:6px"></div>
                                    <div class="skeleton" style="height:12px; width:220px; margin-top:10px; border-radius:6px"></div>
                                </div>
